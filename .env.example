# ========================
# 数据库配置
# ========================


# 数据库主机地址（本地开发通常为 localhost）
DB_HOST=localhost

# 数据库用户名
DB_USER=root

# 数据库密码
DB_PASSWORD=your_password

# 数据库名称
DB_NAME=library_db

# 数据库端口（MySQL 默认 3306）
DB_PORT=3306


# ========================
# 应用配置
# ========================


# 应用端口
PORT=3000

# 应用环境：development（开发）| production（生产）
NODE_ENV=development

# JWT 密钥（用于认证，生产环境请修改为强密钥）
JWT_SECRET=your_jwt_secret_key_here

# 密码加盐轮数
SALT_ROUNDS=10

# 借书默认借阅天数
DEFAULT_BORROW_DAYS=30

# 每日逾期罚款（元）
DAILY_OVERDUE_FINE=1

# ========================
# 日志配置
# ========================


# 日志级别：error | warn | info | debug
LOG_LEVEL=debug

# 日志文件路径（留空则输出到控制台）
LOG_FILE=

# 是否在控制台输出带颜色的日志
LOG_COLORS=true

# ========================
# 跨域配置
# ========================


# 允许访问的域名，多个用逗号分隔，* 表示允许所有
CORS_ORIGIN=*

# 是否允许发送 Cookie
CORS_CREDENTIALS=true
